<Page x:Class="Rieltors.Pages.RieltorPages.RieltorEditPropertyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rieltors.Pages.RieltorPages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="RieltorEditPropertyPage"
      Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" 
                   Grid.ColumnSpan="2" 
                   Text="Редактирование Объекта Недвижимости" 
                   Style="{StaticResource PageHeaderStyle}"/>

        <!-- PropertyType -->
        <Label Grid.Row="1" 
               Grid.Column="0" 
               Content="Тип недвижимости:"/>
        <ComboBox x:Name="PropertyTypeComboBox" 
                  Width="250" 
                  Grid.Column="1" 
                  Grid.Row="1" Margin="3,3,603,4">
            <ComboBoxItem Content="Квартира"/>
            <ComboBoxItem Content="Дом"/>
            <ComboBoxItem Content="Студия"/>
            <ComboBoxItem Content="Комната"/>
        </ComboBox>

        <!-- Address -->
        <Label Grid.Row="2" 
               Grid.Column="0" 
               Content="Адрес:"/>
        <TextBox Grid.Row="2" 
                 Grid.Column="1" 
                 x:Name="AddressTextBox"/>

        <!-- City -->
        <Label Grid.Row="3" 
               Grid.Column="0" 
               Content="Город:"/>
        <TextBox Grid.Row="3" 
                 Grid.Column="1" 
                 x:Name="CityTextBox"/>

        <!-- Region -->
        <Label Grid.Row="4" 
               Grid.Column="0" 
               Content="Регион:"/>
        <TextBox Grid.Row="4" 
                 Grid.Column="1" 
                 x:Name="RegionTextBox"/>

        <!-- PostalCode -->
        <Label Grid.Row="5" 
               Grid.Column="0" 
               Content="Почтовый код:"/>
        <TextBox Grid.Row="5" 
                 Grid.Column="1" 
                 x:Name="PostalCodeTextBox"/>

        <!-- Price -->
        <Label Grid.Row="6" 
               Grid.Column="0" 
               Content="Цена:"/>
        <TextBox Grid.Row="6" 
                 Grid.Column="1" 
                 x:Name="PriceTextBox"/>

        <!-- Area -->
        <Label Grid.Row="7" 
               Grid.Column="0" 
               Content="Площадь:"/>
        <TextBox Grid.Row="7" 
                 Grid.Column="1" 
                 x:Name="AreaTextBox"/>

        <!-- Description -->
        <Label Grid.Row="8" 
               Grid.Column="0" 
               Content="Описание:"/>
        <TextBox Grid.Row="8" 
                 Grid.Column="1" 
                 x:Name="DescriptionTextBox" 
                 TextWrapping="Wrap"
                 Height="80"/>

        <!-- Rooms -->

        <!-- Bathrooms -->

        <!-- YearBuilt -->

        <!-- PropertyStatus -->
        <Label Grid.Row="12" 
               Grid.Column="0" 
               Content="Статус:"/>
        <ComboBox x:Name="PropertyStatusComboBox" 
                  Width="250" 
                  Grid.Column="1" 
                  Grid.Row="12" Margin="3,4,603,3">
            <ComboBoxItem Content="Активно"/>
            <ComboBoxItem Content="Продано"/>
            <ComboBoxItem Content="В аренде"/>
            <ComboBoxItem Content="Снято с публикации"/>
        </ComboBox>

        <!-- AddedDate -->

        <!-- LastUpdatedDate -->

        <!-- Deal Type -->
        <Label Grid.Row="15" 
               Grid.Column="0" 
               Content="Тип сделки:"/>
        <ComboBox x:Name="DealTypeComboBox" 
                  Width="250" 
                  Grid.Column="1" 
                  Grid.Row="15" Margin="3,2,603,5">
            <ComboBoxItem Content="Аренда"/>
            <ComboBoxItem Content="Продажа"/>
        </ComboBox>

        <!-- Image Upload -->
        <Label Grid.Row="16" 
               Grid.Column="0" 
               Content="Изображения:"/>
        <Button x:Name="AddImageButton" 
                Content="Добавить изображение" 
                Click="AddImageButton_Click"
                Style="{StaticResource ActionButtonStyle}"
                Grid.Row="16" 
                Grid.Column="1" HorizontalAlignment="Left" Margin="3,3,0,3"/>

        <Border Style="{StaticResource SectionStyle}" 
                Grid.Row="17" 
                Grid.Column="1">
            <ListView x:Name="ImagesListView" 
                      Height="100" 
                      ItemsSource="{Binding ImageList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImageSource}" 
                                   Width="50" 
                                   Height="50" 
                                   Margin="0,0,5,0"/>
                            <TextBox Text="{Binding Description}" 
                                     Width="150" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Save Button -->
        <StackPanel Grid.Row="21" 
                    Grid.ColumnSpan="2" 
                    Style="{StaticResource ButtonPanelStyle}">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Style="{StaticResource ActionButtonStyle}" Width="174"/>
        </StackPanel>
    </Grid>
</Page>
