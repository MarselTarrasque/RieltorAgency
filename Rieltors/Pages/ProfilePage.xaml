<Page x:Class="Rieltors.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rieltors.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="UserProfilePage"
      Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="389*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Text="Профиль пользователя"
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="19,20,0,20"
                   HorizontalAlignment="Left"
                   Foreground="{StaticResource PrimaryColor}" Grid.Column="1"/>
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Имя:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="20,10,10,10"
                   Foreground="{StaticResource TextColor}"/>
        <TextBlock x:Name="FirstName" Grid.Row="1" Grid.Column="1"
                   Text="{Binding FirstName}"
                   FontSize="20"
                   Margin="10,10,20,10"
                   Foreground="{StaticResource TextColor}"/>
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Фамилия:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="20,10,10,10"
                   Foreground="{StaticResource TextColor}"/>
        <TextBlock x:Name="SecondName" Grid.Row="2" Grid.Column="1"
                   Text="{Binding LastName}"
                   FontSize="20"
                   Margin="10,10,20,10"
                   Foreground="{StaticResource TextColor}"/>
        <TextBlock Grid.Row="3" Grid.Column="0"
Text="Email:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="20,10,10,10"
                   Foreground="{StaticResource TextColor}"/>
        <TextBlock x:Name="Email" Grid.Row="3" Grid.Column="1"
                   Text="{Binding Email}"
                   FontSize="20"
                   Margin="10,10,20,10"
                   Foreground="{StaticResource TextColor}"/>
        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Номер телефона:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="20,10,10,10"
                   Foreground="{StaticResource TextColor}"/>
        <TextBlock x:Name="PhoneNumber" Grid.Row="4" Grid.Column="1"
                   Text="{Binding PhoneNumber}"
                   FontSize="20"
                   Margin="10,10,20,10"
                   Foreground="{StaticResource TextColor}"/>

        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Тип пользователя:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="20,10,10,10"
                   Foreground="{StaticResource TextColor}"/>
        <TextBlock x:Name="Role" Grid.Row="5" Grid.Column="1"
                   Text="{Binding UserType}"
                   FontSize="20"
                   Margin="10,10,20,10"
                   Foreground="{StaticResource TextColor}"/>

        <TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Дата регистрации:"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="20,10,10,10"
                   Foreground="{StaticResource TextColor}"/>
        <TextBlock x:Name="DateOfRegister" Grid.Row="6" Grid.Column="1"
                   Text="{Binding RegistrationDate}"
                   FontSize="20"
                   Margin="10,10,20,10"
                   Foreground="{StaticResource TextColor}"/>
        <Button Grid.Row="6" Grid.Column="1"
                Content="Редактировать профиль"
                FontSize="20"
                Margin="509,46,0,0"
                HorizontalAlignment="Left"
                Padding="10,5"
                Background="{StaticResource PrimaryColor}"
                Foreground="White"
                Click="EditProfileButton_Click" Width="260" Grid.RowSpan="2"/>

    </Grid>
</Page>
