<Page x:Class="Rieltors.Pages.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rieltors.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="EditProfilePage"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Редактирование профиля"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"
                   Foreground="{StaticResource PrimaryColor}"/>

        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Имя:"
                   FontSize="16"
                   Margin="20,10,10,5"
                   Foreground="{StaticResource TextColor}"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 x:Name="FirstNameTextBox"
                 Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Margin="10,10,20,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Фамилия:"
                   FontSize="16"
                   Margin="20,5,10,5"
                   Foreground="{StaticResource TextColor}"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 x:Name="LastNameTextBox"
                 Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Margin="10,5,20,5"/>

        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Email:"
                   FontSize="16"
                   Margin="20,5,10,5"                   Foreground="{StaticResource TextColor}"/>
        <TextBox Grid.Row="3" Grid.Column="1"
                 x:Name="EmailTextBox"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Margin="10,5,20,5"/>

        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Номер телефона:"
                   FontSize="16"
                   Margin="20,5,10,5"
                   Foreground="{StaticResource TextColor}"/>
        <TextBox Grid.Row="4" Grid.Column="1"
                 x:Name="PhoneNumberTextBox"
                 Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Margin="10,5,20,5"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="SaveButton"
                    Content="Сохранить"
                    FontSize="16"
                    Padding="15,5"
                    Margin="0,0,10,0"
                    Background="{StaticResource PrimaryColor}"
                    Foreground="White"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Отмена"
                    FontSize="16"
                    Padding="15,5"
                    Background="LightGray"
                    Click="CancelButton_Click"/>
        </StackPanel>

        <TextBlock x:Name="ErrorMessage" Grid.Row="6" Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   Foreground="Red"
                   Margin="0,10,0,0"/>
    </Grid>
</Page>
