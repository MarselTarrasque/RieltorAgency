<Page x:Class="Rieltors.NavPanels.ClientNavPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rieltors.NavPanels"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="200"
      Title="ClientNavPanel"
      Background="{StaticResource BackgroundColor}">

    <StackPanel Style="{StaticResource ButtonPanelStyle}" Orientation="Vertical">
        <Button x:Name="Profile"
                Content="Профиль"
                Style="{StaticResource ActionButtonStyle}"
                Click="ProfileButton_Click" Width="189"/>

        <Button x:Name="Properties"
                Content="Недвижимость"
                Style="{StaticResource ActionButtonStyle}"
                Click="PropertiesButton_Click" Width="189"/>
        <Button x:Name="Requests"
            Content="Создать обращение"
            Style="{StaticResource ActionButtonStyle}"
            Click="RequestsButton_Click" Width="189"/>
        <Button x:Name="MyRequests"
            Content="Мои обращения"
            Style="{StaticResource ActionButtonStyle}"
            Click="MyRequestsButton_Click" Width="189"/>
        <Button x:Name="LogoutButton"
            Content="Выйти"
            Style="{StaticResource CancelButtonStyle}"
            Click="LogoutButton_Click"/>

    </StackPanel>
</Page>